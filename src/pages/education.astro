---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Education" sideBarActiveItemID="education">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Education ðŸŽ“</div>
  </div>

  <div class="mb-8 p-4 bg-base-200 rounded-lg">
    <div class="text-center">
      <span class="text-lg font-semibold">Anna University</span>
      <span class="mx-4">|</span>
      <span class="text-lg font-semibold">Class 12th: 97%</span>
      <span class="mx-4">|</span>
      <span class="text-lg font-semibold">Class 10th: 96%</span>
    </div>
  </div>

  <div class="timeline grid gap-8">
    <div class="timeline-item">
      <div class="timeline-dot bg-primary"></div>
      <div>
        <div class="font-bold text-xl">B.E. Robotics & Automation</div>
        <div class="text-sm text-base-content/70 mb-1">Anna University, Chennai &mdash; 2022 &ndash; 2026</div>
        <!-- <div class="mb-2 text-base-content/80">CGPA: 8</div> -->
        <ul class="list-disc ml-6">
          <li>Specialization in Path Planning, Sensor Integration, Control Systems</li>
          <li>Projects: Autonomous Rovers, Drones, Surgical Robots</li>
          <li>Active in research and competition teams (ISRO, SIH)</li>
        </ul>
      </div>
    </div>
    <div class="timeline-item">
      <div class="timeline-dot bg-primary"></div>
      <div>
        <div class="font-bold text-lg">Class 12th (CBSE) &mdash; 97%</div>
        <div class="text-sm text-base-content/70 mb-1">Velammal, Chennai, IN (2022)</div>
        <div class="mb-2 text-base-content/80">Computer Science Stream </div>
      </div>
    </div>
    <div class="timeline-item">
      <div class="timeline-dot bg-primary"></div>
      <div>
        <div class="font-bold text-lg">Class 10th (CBSE) &mdash; 96%</div>
        <div class="text-sm text-base-content/70 mb-1">Velammal Vidyalaya, Chennai, IN (2020)</div>
      </div>
    </div>
  </div>

  
</BaseLayout>

<style>
  .timeline {
    position: relative;
    margin-left: 1.5rem;
    border-left: 3px solid var(--fallback-b1, #ddd);
  }
  .timeline-item {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    margin-bottom: 2rem;
    position: relative;
  }
  .timeline-dot {
    flex-shrink: 0;
    width: 1.25rem;
    height: 1.25rem;
    border-radius: 50%;
    margin-left: -2rem;
    border: 2px solid var(--fallback-bc, #bbb);
    margin-top: 5px;
  }
  .timeline-item:last-child {
    margin-bottom: 0;
  }
</style>



<style>
  .timeline {
    position: relative;
    margin-left: 1.5rem;
    border-left: 3px solid var(--fallback-b1, #ddd);
  }
  .timeline-item {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    margin-bottom: 2rem;
    position: relative;
  }
  .timeline-dot {
    flex-shrink: 0;
    width: 1.25rem;
    height: 1.25rem;
    border-radius: 50%;
    margin-left: -2rem;
    border: 2px solid var(--fallback-bc, #bbb);
    margin-top: 5px;
  }
  .timeline-item:last-child {
    margin-bottom: 0;
  }
</style>


